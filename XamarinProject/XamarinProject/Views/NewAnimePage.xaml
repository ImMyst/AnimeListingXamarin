<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinProject.NewAnimePage"
             BackgroundImage="background.jpg"
             Title="{Binding Titre}">
    
    <StackLayout Margin="20, 10, 20, 0">
        <Entry
            x:Name="nameEntry" 
            Placeholder="Nom de l'anime" 
            TextColor="White"
            PlaceholderColor="#70ffffff"/>
        <Entry
            x:Name="studioEntry" 
            Placeholder="Studio d'animation" 
            TextColor="White"
            PlaceholderColor="#70ffffff"/>
        <Editor
            x:Name="summaryEditor"
            Placeholder="Synopsis"
            TextColor="White"
            PlaceholderColor="#70ffffff"
            HeightRequest="100"/>

        <Button Text="Enregistrer"
                Clicked="saveAnimeEntry"
                BackgroundColor="#a24438"
                TextColor="White"/>
    </StackLayout>
</ContentPage>